{
  "appenders": {
      "console": {
          "type": "console",
          "category": "console"
      },
      "file": {
          "type": "fileSync",
          "filename": "C:\\Users\\joost\\Documents\\Log\\app.log",
          "maxLogSize": 16384,
          "numBackups": 3,
          "pattern": "%d{dd-MM-yyyy HH:mm:ss} %-5p [%m]",
          "category": "file"
        }
  },
  "categories": {
    "default": { "appenders": [ "console", "file" ], "level": "DEBUG" },
    "file": { "appenders": [ "file"], "level": "DEBUG" }
  }
}